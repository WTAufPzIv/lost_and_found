page{
  height: 100%;
  width: 100%;
  margin:0;
  padding:0;
}
.nav{
  width: 100%;
  height: 75px;
  background-color: #FFD84D;
  text-align: center;
  line-height: 95px;
  position: fixed;
  z-index: 10000;
}
.navText{
  color: black;
  font-size: 20px;
}
.navImg{
  width: 30px;
  height: 30px;
  position: absolute;
  left:15px;
}
.body{
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-content: center;
  align-items: center;
  /* background-color: rgb(250,250,250); */
}
.logo{
  position: relative;
  margin-top:20px;
  width: 35%;
  border-radius: 30px;
}
.p{
  font-size: 20px;
  color:rgb(50,50,50);
  height: 40px;
  line-height: 40px;
  font-weight: bold;
}
.p2{
  font-size: 13px;
  color:rgb(100,100,100);
  height: 20px;
  line-height: 20px;
}
.brief{
  width: 97%;
  /* background-color: gold; */
  display: flex;
  flex-direction: column;
  justify-content: start;
  padding-left: 10px;
  margin:15px auto;
}
.head{
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
}
.block{
  width: 15px;
  height: 30px;
  background-color: #FFD84D;
}
.title{
  height: 30px;
  font-size: 17px;
  color:rgb(100,100,100);
  line-height: 30px;
  position: relative;
  margin-left:5px;
}
.main1{
  width: 95%;
  padding-left: 10px;
  padding-right: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top:10px;
  font-size: 15px;
  color:rgb(100,100,100);
}