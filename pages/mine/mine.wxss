page{
  height: 100%;
  width: 100%;
  margin:0;
  padding:0;
}
.nav{
  width: 100%;
  height: 75px;
  background-color: #FFD84D;
  text-align: center;
  line-height: 95px;
  position: fixed;
}
.navText{
  color: black;
  font-size: 20px;
}
.userinfo-btn{
  width: 200px;
  height: 50px;
  font-size: 20xp;
  line-height: 50px;
  border-radius: 5px;
  border-width: 1px;
  border-style: solid;
  border-color: white;
  background-color: rgba(255,255,255,0);
  color:white;
}
.cart{
  width: 100%;
  height: 200px;
  /* background-color: red; */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding-bottom: 20px;
  padding-top:10px; 
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.avatarBox{
  width: 90px;
  height: 90px;
  border-radius: 100px;
  overflow: hidden;
}
.avatar{
  width:90px;
  height: 90px;
}
.name{
  height: 20px;
  font-size: 20px;
  font-weight: 2px;
  line-height: 20px;
  color:white;
}
.school{
  height: 20px;
  padding-left: 7px;
  padding-right: 7px;
  padding-top: 3px;
  padding-bottom: 3px;
  font-size: 14px;
  border-style: solid;
  border-radius: 100px;
  border-width: 1px;
  line-height: 20px;
  border-color: white;
  color:white;
}
.setting{
  top:100px;
  position: relative;
  /* background-color: green; */
  width: 100%;
  display: flex;
  flex-direction: column;
  
  align-items: center;
}
.settingicon{
  width: 20px;
  height: 20px;
  margin-right: 20px;
  margin-left: 10px;
}
.settingitem{
  width: 95%;
  height: 60px;
  padding-left: 20px;
  display: flex;
  flex-direction: row;
  /* background-color: yellow; */
  line-height: 60px;
  align-items: center;
  font-size: 20px;
  color:rgb(111,111,111);
}
.hr{
  width: 67%;
  height: 1px;
  background-color: rgb(200,200,200);
}
.changeBg{
  width: 30px;
  height: 30px;
  border-radius: 100px;
  border-style: solid;
  border-width: 2px;
  border-color: white;
  align-self: flex-end;
  margin-right: 10px;
  flex-basis:30px;
  display: flex;
  justify-content: center;
  flex-direction: row;
  align-items: center;
}