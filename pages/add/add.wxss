@import '../../utils/weui.wxss';
page{
  height: 100%;
  width: 100%;
  margin:0;
  padding:0;
}
.nav{
  width: 100%;
  height: 75px;
  background-color: white;
  text-align: center;
  line-height: 95px;
  position: fixed;
  z-index: 10000;
}
.navText{
  color: black;
  font-size: 20px;
}
.navImg{
  width: 30px;
  height: 30px;
  position: absolute;
  left:15px;
}
.head{
  position: relative;
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.left{
  width: 45%;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  border-style: solid;
  border-width: 1px;
  text-align: center;
  border-color: #FFD84D;
}
.right{
  width: 45%;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  border-style: solid;
  border-width: 1px;
  text-align: center;
  border-color: #FFD84D;
}
.weui-cells:before{
  top:0;
  border-top:1rpx solid white;
  }
.weui-cell{
  line-height: 3.5rem;
}
.weui-cells:after{
  bottom:0;border-bottom:1rpx solid white
}

.weui-btn{
  width: 80%;
}
.imgcontainer{
  width: 87%;
  height: 100px;
  display: flex;
  /* background: greenyellow; */
  padding-left:10px;
  padding-top: 5px;
  padding-bottom: 5px; 
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
}
.addimgicon{
  height: 97%;
  width: 30%;
  /* background-color: red; */
  border-radius: 10px;
  border-style: solid;
  border-color: rgb(180,180,180);
  border-width: 1px;
  display: flex;
  justify-content: center;
  padding-right:5px;padding-top:5px;
  align-items: center;
}
.btn{
  position: relative;
  top:100px;
  width:60%;
  height: 50px;
  color:white;
  background-color: #FFD84D;
  font-size: 20px;
  line-height: 50px;
  text-align: center;
  border-radius: 100px;
  margin-bottom: 50px;
}
.footer{
  width: 100%;
  text-align: center;
  font-size: 15px;
  color:rgb(180,180,180);
  position: relative;
  top:60px;
}